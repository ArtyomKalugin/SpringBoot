<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.5">

    <changeSet id="2022-03-23--01-init-tables" author="solncev">
        <createTable tableName="users">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="email" type = "varchar(100)">
                <constraints unique="true"/>
            </column>
            <column name="password" type = "varchar(64)">
            </column>
            <column name="verificationCode" type = "varchar(64)">
            </column>
        </createTable>

        <createTable tableName="weather">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="description" type="varchar">
            </column>
            <column name="humidity" type = "varchar">
            </column>
            <column name="temp" type = "varchar">
            </column>
            <column name="city" type = "varchar">
            </column>
            <column name="email" type = "varchar">
            </column>
            <column name="appeal" type = "integer">
                <constraints foreignKeyName="appeal_id" nullable="false" references="appeal(id)"/>
            </column>
        </createTable>

        <createTable tableName="weather">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="varchar">
            </column>
            <column name="weather" type = "integer">
                <constraints foreignKeyName="weather_id" nullable="false" references="weather(id)"/>
            </column>
            <column name="user_id" type = "integer">
                <constraints foreignKeyName="user_id" nullable="false" references="user(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>